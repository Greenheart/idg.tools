{
    "name": "innerdevelopmentgoals",
    "private": true,
    "engines": {
        "node": ">= 16",
        "pnpm": ">= 7"
    },
    "scripts": {
        "dev": "pnpm --filter \"./(tools|cms|content)\" --parallel dev",
        "tools": "pnpm --filter tools dev",
        "cms": "pnpm --filter cms dev",
        "content": "pnpm --filter tools watch:content",
        "build": "pnpm --filter \"./(tools|cms|content)\" --parallel build",
        "preview": "pnpm --filter \"./(tools|cms|content)\" --parallel preview"
    }
}
