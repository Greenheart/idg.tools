{
    "name": "innerdevelopmentgoals",
    "version": "0.0.1",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && vite build --mode library && pnpm prepack",
        "demo": "vite --mode library preview",
        "prepare": "svelte-kit sync || echo ''",
        "prepack": "svelte-kit sync && svelte-package && publint",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "sideEffects": [
        "**/*.css"
    ],
    "svelte": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "type": "module",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "svelte": "./dist/index.js"
        }
    },
    "peerDependencies": {
        "svelte": "^5.0.0"
    },
    "devDependencies": {
        "@fontsource-variable/inter": "^5.2.7",
        "@sveltejs/adapter-auto": "^6.1.0",
        "@sveltejs/kit": "^2.41.0",
        "@sveltejs/package": "^2.5.2",
        "@sveltejs/vite-plugin-svelte": "^6.2.0",
        "@types/node": "^24.5.0",
        "esbuild-svelte": "^0.9.3",
        "publint": "^0.3.12",
        "svelte": "^5.38.10",
        "svelte-check": "^4.3.1",
        "typescript": "^5.9.2",
        "vite": "^7.1.5"
    },
    "keywords": [
        "svelte"
    ],
    "dependencies": {
        "bits-ui": "^2.9.8"
    }
}
