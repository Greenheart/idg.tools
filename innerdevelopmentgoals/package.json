{
    "name": "innerdevelopmentgoals",
    "version": "0.0.1",
    "scripts": {
        "dev": "vite dev",
        "build": "vite build && svelte-kit sync && svelte-package -o dist-svelte && vite build --mode library && node scripts/postbuild.ts && pnpm prepack",
        "demo": "vite --mode library preview --outDir demo",
        "prepare": "svelte-kit sync || echo ''",
        "prepack": "publint",
        "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
    },
    "files": [
        "dist",
        "!dist/**/*.test.*",
        "!dist/**/*.spec.*"
    ],
    "sideEffects": [
        "**/*.css"
    ],
    "type": "module",
    "exports": {
        "./framework": {
            "types": "./dist/framework.d.ts",
            "import": "./dist/framework.js",
            "default": "./dist/framework.umd.js"
        },
        "./framework.css": "./dist/framework.css"
    },
    "peerDependencies": {
        "svelte": "^5.0.0"
    },
    "devDependencies": {
        "@fontsource-variable/inter": "^5.2.8",
        "@sveltejs/adapter-auto": "^6.1.0",
        "@sveltejs/kit": "^2.43.2",
        "@sveltejs/package": "^2.5.4",
        "@sveltejs/vite-plugin-svelte": "^6.2.0",
        "@types/node": "^24.5.2",
        "esbuild-svelte": "^0.9.3",
        "publint": "^0.3.13",
        "svelte": "^5.39.5",
        "svelte-check": "^4.3.2",
        "typescript": "^5.9.2",
        "vite": "^7.1.7"
    },
    "keywords": [
        "svelte"
    ],
    "dependencies": {
        "bits-ui": "^2.11.0"
    }
}
