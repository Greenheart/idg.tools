{
    "name": "tools",
    "version": "1.0.0",
    "description": "https://idg.tools | Inner Development Toolkit",
    "private": true,
    "scripts": {
        "dev": "GIT_COMMIT=`git rev-parse --short HEAD` vite dev",
        "dev:host": "GIT_COMMIT=`git rev-parse --short HEAD` vite dev --host",
        "build": "GIT_COMMIT=`git rev-parse --short HEAD` vite build",
        "build:all": "pnpm --filter content build tools && pnpm --filter tools build",
        "preview": "GIT_COMMIT=`git rev-parse --short HEAD` vite preview",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
    },
    "dependencies": {
        "@octokit/graphql": "^5.0.5",
        "remark": "^14.0.2",
        "sanitize-html": "^2.10.0",
        "strip-markdown": "^5.0.0",
        "svelte-meta-tags": "^2.7.0",
        "svelte-typeahead": "^4.4.1"
    },
    "devDependencies": {
        "@rgossiaux/svelte-headlessui": "^1.0.2",
        "@sveltejs/adapter-vercel": "^2.4.2",
        "@sveltejs/kit": "^1.15.8",
        "@tailwindcss/typography": "^0.5.9",
        "@types/sanitize-html": "^2.9.0",
        "autoprefixer": "^10.4.14",
        "cssnano": "^6.0.0",
        "dotenv": "^16.0.3",
        "fast-glob": "^3.2.12",
        "native-fetch": "^4.0.2",
        "postcss": "^8.4.23",
        "postcss-load-config": "^4.0.1",
        "prettier": "^2.8.8",
        "prettier-plugin-svelte": "^2.10.0",
        "prettier-plugin-tailwindcss": "^0.2.7",
        "remark-slate": "^1.8.6",
        "sharp": "^0.32.0",
        "svelte": "^3.58.0",
        "svelte-check": "^3.2.0",
        "tailwindcss": "^3.3.2",
        "tslib": "^2.5.0",
        "typescript": "^5.0.4",
        "undici": "^5.22.0",
        "vite": "^4.3.2"
    },
    "type": "module"
}
