{
    "name": "tools",
    "version": "1.0.0",
    "description": "https://idg.tools | Inner Development Toolkit",
    "private": true,
    "scripts": {
        "dev": "GIT_COMMIT=`git rev-parse --short HEAD` vite dev",
        "dev:host": "GIT_COMMIT=`git rev-parse --short HEAD` vite dev --host",
        "build": "GIT_COMMIT=`git rev-parse --short HEAD` vite build",
        "build:all": "pnpm --filter content build tools && pnpm --filter tools build",
        "preview": "GIT_COMMIT=`git rev-parse --short HEAD` vite preview",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch"
    },
    "dependencies": {
        "@humanspeak/svelte-markdown": "^0.8.11",
        "innerdevelopmentgoals": "workspace:*",
        "@octokit/graphql": "^7.1.1",
        "bits-ui": "^2.9.6",
        "iframe-resizer": "^4.4.5",
        "remark": "^15.0.1",
        "runed": "^0.31.1",
        "strip-markdown": "^6.0.0",
        "svelte-meta-tags": "^4.4.1",
        "svelte-typeahead": "^5.0.0"
    },
    "devDependencies": {
        "@sveltejs/adapter-vercel": "^5.10.2",
        "@sveltejs/kit": "^2.38.1",
        "@sveltejs/vite-plugin-svelte": "^6.2.0",
        "@tailwindcss/typography": "^0.5.16",
        "@tailwindcss/vite": "^4.1.13",
        "sharp": "^0.34.3",
        "svelte": "^5.38.9",
        "svelte-check": "^4.3.1",
        "tailwindcss": "^4.1.13",
        "tinyglobby": "^0.2.15",
        "typescript": "^5.9.2",
        "vite": "^7.1.5"
    },
    "type": "module"
}
