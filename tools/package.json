{
    "name": "tools",
    "version": "1.0.0",
    "description": "https://idg.tools | Inner Development Toolkit",
    "private": true,
    "scripts": {
        "dev": "GIT_COMMIT=`git rev-parse --short HEAD` vite dev",
        "dev:host": "GIT_COMMIT=`git rev-parse --short HEAD` vite dev --host",
        "build": "GIT_COMMIT=`git rev-parse --short HEAD` vite build",
        "build:all": "pnpm --filter content build tools && pnpm --filter tools build",
        "preview": "GIT_COMMIT=`git rev-parse --short HEAD` vite preview",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
    },
    "dependencies": {
        "@octokit/graphql": "^5.0.4",
        "@unocss/reset": "^0.48.0",
        "remark": "^14.0.2",
        "sanitize-html": "^2.8.1",
        "strip-markdown": "^5.0.0",
        "svelte-meta-tags": "^2.6.4",
        "unocss": "^0.48.0"
    },
    "devDependencies": {
        "@rgossiaux/svelte-headlessui": "^1.0.2",
        "@sveltejs/adapter-vercel": "^1.0.0",
        "@sveltejs/kit": "^1.0.1",
        "@tailwindcss/typography": "^0.5.8",
        "@types/sanitize-html": "^2.8.0",
        "autoprefixer": "^10.4.13",
        "cssnano": "^5.1.14",
        "dotenv": "^16.0.3",
        "fast-glob": "^3.2.12",
        "native-fetch": "^4.0.2",
        "postcss": "^8.4.20",
        "postcss-load-config": "^4.0.1",
        "prettier": "^2.8.1",
        "prettier-plugin-svelte": "^2.9.0",
        "prettier-plugin-tailwindcss": "^0.2.1",
        "remark-slate": "^1.8.6",
        "sharp": "^0.31.3",
        "svelte": "^3.55.0",
        "svelte-check": "^3.0.1",
        "tailwindcss": "^3.2.4",
        "tslib": "^2.4.1",
        "typescript": "^4.9.4",
        "undici": "^5.14.0",
        "vite": "^4.0.3"
    },
    "type": "module"
}
