{
    "name": "idg.tools",
    "version": "1.0.0",
    "description": "https://idg.tools | Inner Development Toolbox",
    "private": true,
    "scripts": {
        "dev": "svelte-kit dev",
        "dev:host": "svelte-kit dev --host",
        "build:content": "node  --no-warnings scripts/build-content.js",
        "build": "svelte-kit build",
        "build:all": "npm run build:content && svelte-kit build",
        "preview": "svelte-kit preview",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
    },
    "devDependencies": {
        "@sveltejs/adapter-vercel": "^1.0.0-next.45",
        "@sveltejs/kit": "^1.0.0-next.287",
        "@tailwindcss/typography": "^0.5.2",
        "@types/sanitize-html": "^2.6.2",
        "autoprefixer": "^10.4.2",
        "cssnano": "^5.0.17",
        "postcss": "^8.4.7",
        "postcss-load-config": "^3.1.3",
        "prettier": "^2.5.1",
        "prettier-plugin-svelte": "^2.6.0",
        "prettier-plugin-tailwindcss": "^0.1.8",
        "remark-slate": "^1.8.5",
        "svelte": "^3.46.4",
        "svelte-check": "^2.4.5",
        "svelte-preprocess": "^4.10.4",
        "tailwindcss": "^3.0.23",
        "tslib": "^2.3.1",
        "typescript": "^4.5.5",
        "cuid": "^2.1.8"
    },
    "type": "module",
    "prettier": {
        "semi": false,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true
    },
    "dependencies": {
        "dotenv": "^16.0.0",
        "native-fetch": "^4.0.2",
        "sanitize-html": "^2.7.0",
        "svelte-markdown": "^0.2.2",
        "undici": "^4.14.1"
    }
}
