{
    "name": "idg.tools",
    "version": "1.0.0",
    "description": "https://idg.tools | Welcome to join the co-creation of an open source app that makes it easy to learn about the IDGs and practice them with your community!",
    "private": true,
    "scripts": {
        "dev": "svelte-kit dev",
        "build:content": "node scripts/build-content.js",
        "build": "npm run build:content && svelte-kit build",
        "preview": "svelte-kit preview",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
    },
    "devDependencies": {
        "@sveltejs/adapter-static": "^1.0.0-next.28",
        "@sveltejs/kit": "^1.0.0-next.278",
        "autoprefixer": "^10.4.2",
        "cssnano": "^5.0.17",
        "postcss": "^8.4.6",
        "postcss-load-config": "^3.1.3",
        "prettier": "^2.5.1",
        "prettier-plugin-svelte": "^2.6.0",
        "prettier-plugin-tailwindcss": "^0.1.7",
        "svelte": "^3.46.4",
        "svelte-check": "^2.4.5",
        "svelte-preprocess": "^4.10.3",
        "tailwindcss": "^3.0.23",
        "tslib": "^2.3.1",
        "typescript": "^4.5.5"
    },
    "type": "module",
    "prettier": {
        "semi": false,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true
    },
    "dependencies": {
        "dotenv": "^16.0.0",
        "native-fetch": "^4.0.2",
        "undici": "^4.14.1"
    }
}
