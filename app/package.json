{
    "name": "idg.tools",
    "version": "1.0.0",
    "description": "https://idg.tools | Inner Development Toolbox",
    "private": true,
    "scripts": {
        "dev": "vite dev",
        "dev:host": "vite dev --host",
        "build:content": "node scripts/esbuild.js && node scripts/compiled/build-content.js",
        "build": "vite build",
        "build:all": "npm run build:content && npm run build",
        "preview": "vite preview",
        "check": "svelte-check --tsconfig ./tsconfig.json",
        "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
        "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
        "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
    },
    "dependencies": {
        "dompurify": "^2.4.0",
        "sanitize-html": "^2.7.1",
        "svelte-markdown": "^0.2.3"
    },
    "devDependencies": {
        "@rgossiaux/svelte-headlessui": "^1.0.2",
        "@sveltejs/adapter-vercel": "1.0.0-next.74",
        "@sveltejs/kit": "^1.0.0-next.481",
        "@tailwindcss/typography": "^0.5.7",
        "@types/dompurify": "^2.3.4",
        "@types/sanitize-html": "^2.6.2",
        "autoprefixer": "^10.4.10",
        "cssnano": "^5.1.13",
        "dotenv": "^16.0.2",
        "native-fetch": "^4.0.2",
        "postcss": "^8.4.16",
        "postcss-load-config": "^4.0.1",
        "prettier": "^2.7.1",
        "prettier-plugin-svelte": "^2.7.0",
        "prettier-plugin-tailwindcss": "^0.1.13",
        "remark-slate": "^1.8.6",
        "slugify": "^1.6.5",
        "svelte": "^3.50.1",
        "svelte-check": "^2.9.0",
        "svelte-preprocess": "^4.10.7",
        "tailwindcss": "^3.1.8",
        "tslib": "^2.4.0",
        "typescript": "^4.8.3",
        "undici": "^5.10.0",
        "vite": "^3.1.0"
    },
    "type": "module",
    "prettier": {
        "semi": false,
        "tabWidth": 4,
        "trailingComma": "all",
        "singleQuote": true
    }
}
