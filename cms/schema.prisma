model User {
  id       String @id @default(cuid())
  name     String @default("")
  email    String @unique @default("")
  role     String @default("editor")
  password String
}

model Tool {
  id          String     @id @default(cuid())
  name        String     @default("")
  description String     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  challenge   String     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  resources   String     @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  status      String     @default("draft")
  categories  Category[] @relation("Category_tools")
  skills      Skill[]    @relation("Skill_tools")
  slug        String     @default("")
  link        String     @default("")
  tags        Tag[]      @relation("Tag_tools")
}

model Category {
  id          String  @id @default(cuid())
  name        String  @default("")
  description String  @default("")
  tools       Tool[]  @relation("Category_tools")
  skills      Skill[] @relation("Skill_category")
  color       String  @default("")
}

model Skill {
  id          String    @id @default(cuid())
  name        String    @default("")
  description String    @default("")
  tools       Tool[]    @relation("Skill_tools")
  category    Category? @relation("Skill_category", fields: [categoryId], references: [id])
  categoryId  String?   @map("category")

  @@index([categoryId])
}

model Tag {
  id    String @id @default(cuid())
  name  String @default("")
  tools Tool[] @relation("Tag_tools")
}